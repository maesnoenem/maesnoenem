.contact
    padding 5px
    margin 0 auto
    width 100%
    max-width 45%
    display flex
    flex-direction column

@media(max-width: 860px)
    .contact
        max-width 65%

@media(max-width: 560px)
    .contact
        max-width 75%

.contact__name
    color var(--primary-color)
    font-size 13px
    font-weight 400
    margin 5px 0

.contact__input
    border 1px solid var(--primary-color)
    color var(--primary-color)
    font-size 13px
    font-weight 400
    padding 5px

.contact__input:focus
    box-shadow: 0 0 5px var(--bg-color)
    border: 1px solid var(--bg-color)